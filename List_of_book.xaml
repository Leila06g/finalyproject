<Window x:Class="Finaly_project.Search_Book"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finaly_project"
        mc:Ignorable="d"
        Title="Search_Book" Height="650" Width="870">
    <Border CornerRadius="10">

        <Border.Background>
            <ImageBrush ImageSource="/Images/search_book.jpg"
                        Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="10"
                BorderThickness="1"
                Opacity="0.95">

            <StackPanel Margin="9,28,9,9">
                <Label Content="List Of added Books" FontSize="25" FontFamily="Calibri Bold" FontWeight="Bold"  Margin="0,30,250,100" Width="228"/>

                <Button x:Name="Back_Searchbtn" FontSize="20" Content="Back" FontFamily="Calibri Bold" Margin="-90,-270,620,0"  Background="AliceBlue" Width="108" Height="36" Click="Back_Searchbtn_Click"/>
                <TextBox x:Name="TexBoxSearch" Margin="10,-30,0,0" FontSize="20"  Height="311" FontFamily="Calibri Bold" FontWeight="Bold"  Text=" " Width="546" TextChanged="TexBoxSearch_TextChanged"  />

                


            </StackPanel>






        </Border>
    </Border>
</Window>
